<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.patrik.skritkove.MainActivity"
    android:background="@drawable/menu">

    <Button
        android:id="@+id/MainButtonScore"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/button_highscore"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MainButtonHelp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/MainButtonHelp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/MainButtonHelp" />

    <Button
        android:id="@+id/MainButtonOption"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/button_nastaveni"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/MainButtonScore"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MainButtonScore"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/MainButtonScore" />

    <Button
        android:id="@+id/MainButtonHelp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_ovladani"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MainButtonPlay"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/MainButtonPlay"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/MainButtonPlay" />

    <Button
        android:id="@+id/MainButtonPlay"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="131dp"
        android:background="@drawable/button_hrat"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
